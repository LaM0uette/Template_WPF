<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Separator -->
    <Style x:Key="Spacer" TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Width" Value="10"></Setter>
        <Setter Property="Height" Value="10"></Setter>
    </Style>
    
    <!-- Label -->
    <Style x:Key="LabelDemo" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource RgbB1}"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="FontSize" Value="25"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="BorderThickness" Value="0 0 0 1"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource RgbB1}"></Setter>
        <Setter Property="Width" Value="400"></Setter>
    </Style>
    
    <!-- Border -->
    <Style x:Key="BorderDemo" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="0 0 0 5"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource RgbB1}"></Setter>
    </Style>
    
    <!-- StackPanel -->
    <!-- DemoWidget -->
    <Style x:Key="StkPanDemo" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="Margin" Value="10"></Setter>
    </Style>

</ResourceDictionary>
