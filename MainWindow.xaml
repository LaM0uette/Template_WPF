<Window x:Class="Template_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"  
        Width="800"
        MinWidth="800"
        Height="550"
        MinHeight="550" 
        ResizeMode="CanResizeWithGrip" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        SnapsToDevicePixels="True"
        AllowsTransparency="True"
        Icon="/main.png"
        BorderBrush="{StaticResource RgbM2}"
        BorderThickness="1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" x:Name="GrdHeader" Grid.ColumnSpan="2" Background="{StaticResource RgbM1}" PreviewMouseMove="GrdHeader_PreviewMouseMove">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Icon app -->
            <Image Grid.Column="0" HorizontalAlignment="Left" Width="25" Height="25" Source="/main.png" />
            
            <!-- Title app -->
            <Label Grid.Column="1" 
                   Style="{StaticResource Title}"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Content="TemplateWPF" 
                   Foreground="{StaticResource RgbM3}"
                   />
            
            <StackPanel Grid.Column="2">
                <Button HorizontalAlignment="Right"
                        Width="25"
                        Height="25"
                        Background="{StaticResource RgbM1}">
                    <Image Source="/assets/img/ui/quitter.png"
                           Width="20"
                           Height="20"
                           />
                </Button>
            </StackPanel>
        </Grid>

    </Grid>

</Window>
